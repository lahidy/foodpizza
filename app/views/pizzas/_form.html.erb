    <%= f.label :price, 'precio', class:"col-sm-2 control-label"%>
    <div class="col-sm-10">
     <%= f.number_field :price ,class:"form-control"%>
     </div>
  </div>

  <div class="form-group">
    <%= f.label :ingredients, 'Ingredientes', class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_area :ingredients ,class:"form-control"%>
